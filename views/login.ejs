
<%- include header %>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="/login" method="post" role="form" class="form-horizontal">
                <legend>登录</legend>

                <div class="form-group">
                    <label for="">用户名</label>
                    <input type="text" class="form-control" name="name" id="" placeholder="Input...">
                </div>

                <div class="form-group">
                    <label for="">密码</label>
                    <input type="password" class="form-control" name="password" id="" placeholder="Input...">
                </div>

                <button type="submit" class="btn btn-primary btn-block">登录</button>
                <% if (error) { %>
                <div><%= error %> </div>
                <% } %>
            </form>
        </div>
    </div>
</div>


<%- include footer %>