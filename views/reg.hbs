<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="/reg" method="post" role="form" class="form-horizontal">
                <legend>注册</legend>

                <div class="form-group">
                    <label for="">用户名</label>
                    <input type="text" class="form-control" name="name" id="" placeholder="用户名...">
                </div>

                <div class="form-group">
                    <label for="">密码</label>
                    <input type="password" class="form-control" name="password" id="" placeholder="密码...">
                </div>
                <div class="form-group">
                    <label for="">确认密码</label>
                    <input type="password" class="form-control" name="password-repeat" id="" placeholder="确认密码...">
                </div>
                <div class="form-group">
                    <label for="">邮箱</label>
                    <input type="email" class="form-control" name="email" id="" placeholder="邮箱...">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>