
<%- include header %>
<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Home</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
            <li class="active"><a title="主页" href="/">home</a></li>
            <li><a title="上传" href="/upload">上传</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <% if (user) { %>
            <li><a title="发表" href="/post">post</a></li>
            <li role="presentation" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= user.name %> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a title="登出" href="/logout">logout</a></li>
                </ul>
            <% } else { %>
            <li><a title="登录" href="/login">login</a></li>
            <li><a title="注册" href="/reg">register</a></li>
            <% } %>
        </ul>
    </div><!-- /.navbar-collapse -->
</nav>
<% if (success) { %>
<div><%= success %></div>
<% } %>
<% if (error) { %>
<div><%= error %> </div>
<% } %>

<div class="container">
    <div class="row">
        <% if(user && (user.name == post.name)){%>
        <p>
            <a class="btn btn-primary" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a>
            <a class="btn btn-danger" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a>
        </p>
        <%} %>
        <p class="info">
            作者：<a href="/u/<%- post.name%>"><%= post.name %></a> |
            日期：<%= post.time.minute %>
        </p>
        <pre><%- post.post %></pre>
    </div>
    <div class="row">
        <% post.comments.forEach(function (comment, index) { %>
        <p><a href="<%= comment.website %>"><%= comment.name %></a>
            <span class="info"> 回复于 <%= comment.time %></span></p>
        <p><%- comment.content %></p>
        <% }) %>
    </div>
    <div class="row">
        <form action="" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <legend>留言</legend>
            </div>
            <% if (user) { %>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">姓名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">邮箱</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="website" class="col-sm-2 control-label">网址</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="website" name="website" value="/u/<%= user.name %>"  placeholder="">
                </div>
            </div>
            <% } else { %>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">姓名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">邮箱</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label for="website" class="col-sm-2 control-label">网址</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="website" name="website" value="http://" placeholder="">
                </div>
            </div>
            <% } %>
            <div class="form-group">
                <label for="content" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="content" name="content" placeholder="留下你的话语。。。" rows="5" cols="80"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">留言</button>
                </div>
            </div>
        </form>
    </div>

</div>

<%- include footer %>
