
<%- include header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form action="/edit/<%- user.name %>/<%- post.time.day %>/<%- post.title %>" method="post" role="form" class="form-horizontal">
                <legend>文章编辑</legend>

                <div class="form-group">
                    <label for="">标题</label>
                    <input type="text" class="form-control" name="title" id="" placeholder="标题..." value="<%- post.title %>" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="">正文：</label>
                    <textarea class="form-control" name="post" id="" cols="30" rows="10" placeholder="正文..."><%- post.post %></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block">保存修改</button>
                <% if (error) { %>
                <div><%= error %> </div>
                <% } %>
            </form>
        </div>
    </div>
</div>


<%- include footer %>