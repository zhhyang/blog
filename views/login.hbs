<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form action="/login" method="post" role="form" class="form-horizontal">
            <legend>登录</legend>

            <div class="form-group">
                <label for="">用户名</label>
                <input type="text" class="form-control" name="name" id="" placeholder="Input...">
            </div>

            <div class="form-group">
                <label for="">密码</label>
                <input type="password" class="form-control" name="password" id="" placeholder="Input...">
            </div>

            <button type="submit" class="btn btn-primary">登录</button>
            <a class="btn btn-success" href="/login/github">使用 GitHub 登录</a>
            {{#if error}}
            <div>{{error}}</div>
            {{/if}}
        </form>
    </div>
</div>