{{#each posts}}
<div class="row">
    <p>
    <h2><a href="/u/{{_id}}">{{title}}</a></h2></p>
    <p class="info">
        作者：<a href="/u/{{name}}"><img src="{{head}}" class="r_head" />{{name}}</a> |
        日期：{{time.minute}}
        标签：
        {{#each tags}}
            {{#if tag}}
            <a class="tag" href="/tags/{{tag}}">{{tag}}</a>
            {{/if}}
        {{/each}}
    </p>
    <p>{{post}}</p>
    <p class="info">阅读：{{pv}} | 评论：{{comments.length}}</p>
</div>
{{/each}}

{{> page}}

